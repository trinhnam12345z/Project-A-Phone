@model IEnumerable<Categories>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Categories</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <h6 class="col-8  m-0 font-weight-bold text-primary m-auto">Tables Categories</h6>
                <a asp-controller="Category" asp-action="Create" class=" col-4 btn btn-outline-primary"><b>Create new Category</b></a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Options</th>
                        </tr>
                    </tfoot>
                    <tbody>
                       @foreach (var category in Model)
                        {
                    <tr>
                        <td width="20%">
                            @category.CategoriesName
                        </td>
                        <td width="70%">
                              @category.Description
                        </td>

                        <td>
                            <div>
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

